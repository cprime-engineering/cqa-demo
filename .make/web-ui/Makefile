#--------------------------------------------------------------------------------------------------------------
#--------------------------------------------------------------------------------------------------------------
#
# Begin web-ui make targets
#
#--------------------------------------------------------------------------------------------------------------
#--------------------------------------------------------------------------------------------------------------

#--------------------------------------------------------------------------------------------------------------
# Build the web-ui container locally
#--------------------------------------------------------------------------------------------------------------
docker/web-ui/build:
	cd ./micro-services/web-ui && ember build --environment=production
	docker build --progress plain -f ./micro-services/web-ui/Dockerfile -t web-ui:latest ./micro-services/web-ui

#--------------------------------------------------------------------------------------------------------------
# Build the web-ui container locally without cache
#--------------------------------------------------------------------------------------------------------------
docker/web-ui/build/no-cache:
	cd ./micro-services/web-ui && ember build --environment=production
	docker build --no-cache --progress plain -f ./micro-services/web-ui/Dockerfile -t web-ui:latest ./micro-services/web-ui

#--------------------------------------------------------------------------------------------------------------
# Docker Compose up for web-ui container
#--------------------------------------------------------------------------------------------------------------
docker-compose/web-ui/up: docker/web-ui/build/no-cache
	docker-compose -f ./micro-services/web-ui/docker-compose.yml up

#--------------------------------------------------------------------------------------------------------------
# Docker Compose down for web-ui container
#--------------------------------------------------------------------------------------------------------------
docker-compose/web-ui/down:
	docker-compose -f ./micro-services/web-ui/docker-compose/docker-compose.yml down

#--------------------------------------------------------------------------------------------------------------
#--------------------------------------------------------------------------------------------------------------
#
# End web-ui make targets
#
#--------------------------------------------------------------------------------------------------------------
#--------------------------------------------------------------------------------------------------------------
